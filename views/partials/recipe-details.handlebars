 <div class="card m-5 column" style="width: 20rem;">
            <div class="card-image">
                <figure class="image is-4by3">
                    <img src="./images/joseph-gonzalez-fdlZBWIP0aM-unsplash.jpg" alt="Food">
                </figure>
            </div>
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <p class="title is-4">{{title}}</p>
                        <p class="subtitle is-6">{{user.username}}</p>
                    </div>
                </div>

                <div class="content">
                    {{description}}
                    <br>
                    <h6>Ingredients:</h6>
                    {{#each ingredients}}
                    <p class="ingredients-input">{{this.name}}</p>
                    {{/each}}
                    <p class="date">{{date}}</p>
                    {{#if has_nuts}}
                    <p class="has-nuts">Warning: This recipe contains nuts!</p>
                    {{/if}}
                </div>
            </div>
        </div>